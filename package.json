{
	"name": "next-architecture",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "dotenv -e ./envs/.env.development -- next dev",
		"dev:obfuscated": "dotenv -e ./envs/.env.development -- bun run build:dev && bun run start:obfuscated",
		"build": "dotenv -e ./envs/.env.production -- bun run prepare-build && next build && bun run obfuscate:static",
		"build:dev": "next build && bun run obfuscate:static",
		"build:staging": "dotenv -e ./envs/.env.staging -- bun run prepare-build && next build && bun run obfuscate:static",
		"start": "dotenv -e ./envs/.env.production -- bun run next start",
		"start:obfuscated": "bun run next start",
		"start:staging": "dotenv -e ./envs/.env.staging -- bun run next start",
		"obfuscate:static": "javascript-obfuscator .next/static --output .next/static --compact true --self-defending true --target 'browser'",
		"prepare-build": "bun run lint:biome && bun run check:biome && bun run format:biome",
		"lint": "next lint",
		"lint:biome": "bunx @biomejs/biome lint --write .",
		"check:biome": "bunx @biomejs/biome check --write .",
		"format:biome": "bunx @biomejs/biome format --write ."
	},
	"dependencies": {
		"@iconify/react": "^5.0.2",
		"@radix-ui/react-checkbox": "^1.1.2",
		"@radix-ui/react-label": "^2.1.0",
		"@radix-ui/react-popover": "^1.1.2",
		"@radix-ui/react-radio-group": "^1.2.1",
		"@radix-ui/react-slot": "^1.1.0",
		"@reduxjs/toolkit": "^2.3.0",
		"@types/lodash": "^4.17.13",
		"axios": "^1.7.7",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"dayjs": "^1.11.13",
		"jose": "^5.9.6",
		"lodash": "^4.17.21",
		"lucide-react": "^0.456.0",
		"next": "15.0.3",
		"next-themes": "^0.4.3",
		"nextjs-toploader": "^3.7.15",
		"react": "18.3.1",
		"react-day-picker": "8.10.1",
		"react-dom": "18.3.1",
		"react-hook-form": "^7.53.2",
		"react-if": "^4.1.5",
		"react-redux": "^9.1.2",
		"tailwind-merge": "^2.5.4",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"dotenv-cli": "^7.4.2",
		"eslint": "^8",
		"eslint-config-next": "15.0.3",
		"javascript-obfuscator": "^4.1.1",
		"postcss": "^8",
		"tailwindcss": "^3.4.1",
		"typescript": "^5"
	}
}
